<?xml version="1.0" encoding="UTF-8"?>
<component name="PlayerScreen"
    extends="BaseGroup">

    <interface>
        <field id="removePlayerScreen"
            type="Boolean"
            alwaysNotify="true" />
        <field id="videoScreenData"
            type="assocarray"
            alwaysNotify="true"
            onChange="onVideoScreenDataReceived" />
    </interface>

    <script type="text/brightscript"
        uri="pkg:/components/PlayerScreen/ViewModel/PlayerScreenViewModel.bs" />

    <children>
        <Rectangle id="parentRectangle"
            width="1920"
            height="1080"
            translation="[0,0]"
            color="#000000">
            <Video id="videoPlayer"
                enableScreenSaverWhilePlaying="false"
                enableUI="true"
                width="1920"
                height="1080"
                translation="[0,0]" />
        </Rectangle>
    </children>

</component>
