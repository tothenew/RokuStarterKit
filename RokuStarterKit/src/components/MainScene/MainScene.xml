<component name="MainScene"
    extends="BaseScene"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">

    <interface>
        <field id="showProgressDialog"
            type="boolean"
            alwaysNotify="true"
            onChange="onProgressDialogShown" />
        <field id="hideProgressDialog"
            type="boolean"
            alwaysNotify="true"
            onChange="onProgressDialogHidden" />
        <field id="showErrorDialog"
            type="boolean"
            alwaysNotify="true"
            onChange="onErrorDialogShown" />
        <field id="hideErrorDialog"
            type="boolean"
            alwaysNotify="true"
            onChange="onErrorDialogHidden" />
        <field id="errorTitle"
            type="String"
            alwaysNotify="true" />
        <field id="errorMessage"
            type="String"
            alwaysNotify="true" />
        <field id="isprogressdialogvisible"
            type="Boolean" />
    </interface>

    <children>
        <Rectangle id="parentContainer"
            width="1920"
            height="1080"
            translation="[0,0]"
            color="#343d46ff">
            <LayoutGroup vertAlignment="center"
                horizAlignment="center"
                translation="[960, 540]"
                layoutDirection="vert"
                itemSpacings="8">
                <Label id="tempLabel"
                    horizAlign="center"
                    translation="[0,520]"
                    width="1920"
                    color="#9E9E9E"
                    lineSpacing="2"
                    wrap="true"
                    ellipsizeOnBoundary="true"
                    vertAlign="top"
                    isTextEllipsized="false"
                    text="This starter kit contains some utility resources for any Roku app. Press ok to play video"
                    height="40"
                    font="font:SmallSystemFont">
                </Label>
                <Button id="PlayerNavButton"
                    text="Click" />
                <UIButton id="PlayerNavUIButton" />
            </LayoutGroup>
        </Rectangle>

        <Rectangle id="smRect"
            translation="[0, 0]"
            width="200"
            height="1080"
            color="#c6d3e3FF">
            <Label id="smLabel1"
                horizAlign="center"
                translation="[4,24]"
                width="192"
                color="#000000ff"
                lineSpacing="2"
                wrap="true"
                vertAlign="center"
                text="Press left and/or right to see demo of a working sidemenu animation"
                height="1032"
                font="font:MediumSystemFont" />
            <Label id="smLabel2"
                horizAlign="center"
                translation="[4,656]"
                width="192"
                color="#0x9400D3"
                lineSpacing="2"
                wrap="true"
                vertAlign="center"
                text="Created using 'animate.bs'"
                height="400"
                opacity="0.0"
                font="font:MediumSystemFont" />
        </Rectangle>
    </children>
</component>
